{
  "dependencies": {
    "bootstrap": "^4.3.1",
    "run-for-every-file": "^1.1.0"
  },
  "name": "sonar-components",
  "version": "1.0.0",
  "description": "Re-usable front-end components for Marketing websites",
  "main": "index.js",
  "repository": "git@github.com:wouter-admiraal-sonarsource/sonar-components.git",
  "author": "Wouter Admiraal <wouter.admiraal@sonarsource.com>",
  "license": "LGPL-3.0",
  "scripts": {
    "build:css": "run-for-every-file --file '*.scss' --run 'node-sass --include-path=node_modules/ --output-style=compressed -o dist/{{file-name}}.min.css {{src-file}}'",
    "build:css:dev": "node-sass --include-path=node_modules/ --output-style=expanded -o dist *.scss"
  },
  "devDependencies": {
    "node-sass": "^4.11.0"
  }
}
